{
  "name": "@platform/template-js-rethinkdb-mocked",
  "version": "1.1.3",
  "description": "database mocking used by template projects",
  "main": "dist/mockdb.js",
  "browser": "dist/mockdb.js",
  "module": "src/mockdb.mjs",
  "repository": "code.venom360.com/platform/mockdb",
  "license": "UNLICENSED",
  "exports": {
    ".": {
      "require": "./dist/mockdb.js",
      "import": "./src/mockdb.mjs"
    },
    "./": "./"
  },
  "publishConfig": {
    "@platform:registry": "https://code.venom360.com/api/v4/projects/564/packages/npm/"
  },
  "scripts": {
    "test": "npm run lint && npm run unit-test",
    "lint": "eslint */*mjs && npm run -s lint-yaml",
    "lint-yaml": "command -v yamllint &> /dev/null && yamllint . || echo 'If you want YAML to be linted, install yamllint on your machine.'",
    "lint-fix": "eslint --fix ./src/*mjs ./spec/*mjs",
    "unit-test-coverage": "c8 --all ava",
    "build-dist": "babel src --out-dir dist --source-maps inline --copy-files --presets=@babel/env",
    "unit-test": "ava",
    "test-cover": "c8 --all ava --check-coverage=true"
  },
  "dependencies": {
    "castas": "1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/helper-module-transforms": "^7.17.6",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "ava": "^4.0.1",
    "c8": "^7.11.0",
    "eslint": "^8.9.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.3.4",
    "milliseconds": "^1.0.3",
    "timezone-mock": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.mjs": "eslint"
  },
  "eslintIgnore": [
    "node_modules",
    "build",
    ".nyc_output",
    "coverage",
    ".yarn"
  ],
  "babel": {
    "plugins": [],
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3,
          "targets": {
            "node": true
          }
        }
      ]
    ]
  }
}
